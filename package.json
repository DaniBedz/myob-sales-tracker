    "cy:open": "cypress open"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "airbnb",
      "plugin:prettier/recommended",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/prop-types": "off",
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "no-return-assign": "off",
      "prettier/prettier": "error",
