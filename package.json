{
    "name": "myob Sales Tracker",
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "postinstall": "patch-package"
    },
    "dependencies": {
        "alertifyjs": "^1.13.1",
        "array-move": "^3.0.1",
        "firebase": "^9.0.0-beta.6",
        "patch-package": "^6.4.7",
        "raviger": "^2.4.1",
        "react": "^18.0.0-alpha-81346764b-20210714",
        "react-bootstrap": "^1.6.1",
        "react-dom": "^18.0.0-alpha-81346764b-20210714",
        "react-easy-sort": "^1.0.2",
        "react-flatpickr": "^3.10.7",
        "v4-uuid": "^1.1.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "eslint": "^7.30.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^1.7.0",
        "postinstall-postinstall": "^2.1.0",
        "vite": "^2.4.2"
    },
    "eslintConfig": {
        "extends": [
            "airbnb"
        ],
        "plugins": [],
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "env": {
            "browser": true
        },
        "rules": {
            "comma-dangle": [
                "warn",
                "always-multiline"
            ],
            "eol-last": [
                "warn",
                "always"
            ],
            "eqeqeq": [
                "warn",
                "always"
            ],
            "import/no-extraneous-dependencies": "off",
            "import/order": [
                "warn",
                {
                    "newlines-between": "always",
                    "pathGroups": [
                        {
                            "pattern": "languages/**/*",
                            "group": "internal",
                            "position": "after"
                        },
                        {
                            "pattern": "global/**/*",
                            "group": "internal",
                            "position": "after"
                        },
                        {
                            "pattern": "consts/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "config/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "models/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "services/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "stories/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "view/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "context/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "components/**/*",
                            "group": "internal",
                            "position": "before"
                        },
                        {
                            "pattern": "containers/**/*",
                            "group": "internal",
                            "position": "before"
                        }
                    ]
                }
            ],
            "indent": [
                "warn",
                4
            ],
            "max-len": [
                "warn",
                150
            ],
            "no-console": [
                "warn"
            ],
            "no-multi-spaces": "warn",
            "no-multiple-empty-lines": "warn",
            "no-param-reassign": "off",
            "no-plusplus": "off",
            "no-return-assign": [
                "warn",
                "except-parens"
            ],
            "no-trailing-spaces": "warn",
            "no-unused-expressions": [
                "warn",
                {
                    "allowShortCircuit": true,
                    "allowTernary": true,
                    "allowTaggedTemplates": true
                }
            ],
            "no-var": "warn",
            "object-curly-spacing": "warn",
            "padded-blocks": [
                "warn",
                "never"
            ],
            "prefer-arrow-callback": "warn",
            "quotes": [
                "warn",
                "single"
            ],
            "no-unused-vars": "warn",
            "react/jsx-indent": [
                "warn",
                4
            ],
            "react/jsx-indent-props": [
                "warn",
                4
            ],
            "react/prop-types": "off",
            "semi": [
                "warn",
                "always"
            ]
        }
    }
}
